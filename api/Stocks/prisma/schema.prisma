// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Stock? @relation("ProductStock")
  // Pas besoin de `fields` et `references` ici puisque c'est le côté Stock qui les contiendra
}

model Stock {
  id                Int      @id @default(autoincrement())
  quantity          Int     
  reorderThreshold  Int     
  lastUpdated       DateTime @updatedAt 
  product           Product  @relation("ProductStock", fields: [productId], references: [id])
  productId         Int      @unique 
  replenishmentNotifications ReplenishmentNotification[]

}

model ReplenishmentNotification {
  id        Int      @id @default(autoincrement())
  stockId   Int      
  message   String  
  createdAt DateTime @default(now()) 
  stock     Stock    @relation(fields: [stockId], references: [id])
}

