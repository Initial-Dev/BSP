// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  brand     String
  description String?
  image     String
  price     Int
  category    String
  variants  Variant[]
}

model Variant {
  id        Int      @id @default(autoincrement())
  color     String
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
}
