// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://cart:cart@dbcart-service:5432/cart"
}

model Cart {
  id   Int    @id @default(autoincrement())
  userID Int
  itemId Int
  quantity Int
}

model Shipping {
  id   Int    @id @default(autoincrement())
  userID Int
  address String
  city String
  state String
  zip String
}

model Payment {
  id   Int    @id @default(autoincrement())
  userID Int
  amount Float
}